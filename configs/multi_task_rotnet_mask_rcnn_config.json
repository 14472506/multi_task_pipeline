{
    "model":{
        "model_name": "RotMaskRCNN_MultiTask",
        "backbone_type": "pre-trained",
        "num_rotations": 4,
        "drop_out": 0.2,
        "batch_norm": false,
        "trainable_layers": 5,
        "num_classes": 2
    },   
    "dataset":{
        "rotnet":{
            "dir": "datasets/sources/All_RGB",
            "train_test_split": 0.8,
            "train_val_split": 0.8,
            "train":{
                "batch_size": 4,
                "shuffle": true,
                "num_workers": 0,
                "augment": true
            },
            "val":{
                "batch_size": 1,
                "shuffle": false,
                "num_workers": 0,
                "augment": false
            },
            "test":{
                "batch_size": 1,
                "shuffle": false,
                "num_workers": 0,
                "augment": false
            }
        },
        "mask_rcnn":{
            "train":{
                "type": "train",
                "dir": "datasets/sources/jersey_dataset_v4/train",
                "json_dir": "datasets/sources/jersey_dataset_v4/train/train.json",
                "batch_size": 1,
                "shuffle": true,
                "num_workers": 0,
                "augment": false
            },
            "val":{
                "type": "val",
                "dir": "datasets/sources/jersey_dataset_v4/val",
                "json_dir": "datasets/sources/jersey_dataset_v4/val/val.json",
                "batch_size": 1,
                "shuffle": false,
                "num_workers": 0,
                "augment": false
            },
            "test":{
                "type": "test",
                "dir": "datasets/sources/jersey_dataset_v4/test",
                "json_dir": "datasets/sources/jersey_dataset_v4/test/test.json",
                "batch_size": 1,
                "shuffle": false,
                "num_workers": 0,
                "augment": false
            }
        }
    },
    "optimizer":{
        "opt_name": "Adam",
        "opt_lr": 0.00005, 
        "sched_name": "StepLR",
        "sched_step": 50,
        "sched_gamma": 0.1
    },
    "loop":{
        "train": true,
        "test": false,
        "start_epoch": 0, 
        "end_epoch": 80,
        "loop_type": "multi_task",
        "device": "cuda:0",
        "scheduler": true,
        "amp": true
    },
    "logging":{
        "logger": "multi_task_logger",
        "path": "outputs/multi_task_dev/DELET_THIS",
        "pth_name": "multi_task_best.pth"
    }
}