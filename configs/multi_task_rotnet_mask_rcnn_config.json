{
    "metadata": {
        "version": "1.0",
        "description": "Base configuration for RotNet_ResNet_50 training on All_RGB dataset."
    },
    "model":{
        "model_name": "RotMaskRCNN_MultiTask",
        "params":{
            "backbone_type": "pre-trained",
            "num_rotations": 4,
            "drop_out": 0.2,
            "batch_norm": false,
            "trainable_layers": 5,
            "num_classes": 2
            }
    },   
    "dataset":{
        "source": "datasets/sources/jersey_dataset_v4",
        "rotnet":{
            "split":{
                "train_test": 0.8,
                "train_val": 0.8
                },
            "num_rotations": 4,
            "params":{
                "train":{
                    "batch_size": 4,
                    "shuffle": true,
                    "num_workers": 0,
                    "augment": true
                },
                "val":{
                    "batch_size": 1,
                    "shuffle": false,
                    "num_workers": 0,
                    "augment": false
                },
                "test":{
                    "batch_size": 1,
                    "shuffle": false,
                    "num_workers": 0,
                    "augment": false
                }
            }
        },
        "mask_rcnn":{
            "params":{
                "train":{
                    "dir": "train",
                    "json": "train.json",
                    "batch_size": 1,
                    "shuffle": true,
                    "num_workers": 0,
                    "augment": true
                },
                "val":{
                    "dir": "val",
                    "json": "val.json",
                    "batch_size": 1,
                    "shuffle": false,
                    "num_workers": 0,
                    "augment": false
                },
                "test":{
                    "dir": "test",
                    "json_dir": "test.json",
                    "batch_size": 1,
                    "shuffle": false,
                    "num_workers": 0,
                    "augment": false
                }
            }
        }
    },
    "optimizer": {
        "name": "Adam",
        "params": {
            "lr": 0.00005
        },
        "scheduler": {
            "name": "StepLR",
            "params": {
                "step": 200,
                "gamma": 0.1
            }
        }
    },
    "loop": {
        "actions": ["train"],
        "epochs": {
            "start": 0,
            "end": 45
        },
        "type": "classification",
        "device": "cuda:0",
        "scheduler": true,
        "amp": false
    },
    "logging":{
        "logger": "multi_task_logger",
        "path": "outputs/multi_task_dev/DELET_THIS",
        "pth_name": "multi_task_best.pth"
    }
}